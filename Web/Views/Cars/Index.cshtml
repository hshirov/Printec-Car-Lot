@model Web.Models.CarsViewModel
@{
    ViewData["Title"] = "All Cars";
}

<div class="row">
    @foreach (var car in Model.Cars)
    {
        <div class="col-md-6">
            <h3>@car.Make</h3>
            <h5 class="text-muted">@car.Model</h5>
            <a asp-action="Details" asp-route-id="@car.Id">View details</a>
            <hr />
        </div>
    }
</div>